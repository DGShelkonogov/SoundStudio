<Page x:Class="Zvuki.AdTypePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zvuki"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="AliceBlue"
      Title="AdTypePage">

    <Grid>
        <TextBox x:Name="AdType" HorizontalAlignment="Left" Margin="269,36,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="170" Height="19">add</TextBox>
        <Button Content="Add" Click="Button_Click_Add_Ad" HorizontalAlignment="Left" Margin="269,420,0,0" VerticalAlignment="Top" Width="100"/>



        <ListView Name="AddList" Margin="0,0,536,0" ScrollViewer.VerticalScrollBarVisibility="Hidden">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Title}">Модель</GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Add new" HorizontalAlignment="Left" Margin="269,10,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
